<%if user_signed_in?%>
<h1>Friends</h1>
  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>
        <% if friend.user == current_user %>
          <tr>
            <td><%= link_to friend.first_name + " " + friend.last_name, friend %></td>
            <td><%= friend.email %></td>
            <td><%= friend.phone %></td>
            <td><%= friend.twitter %></td>
          </tr>
        <%end%>
        <%end%>
    </tbody>
  </table>
  <br>

  <%= link_to 'New Friend', new_friend_path, class:"btn btn-secondary" %>
<%else%>
<div class="container">
  <div class="card text-center">
  <div class="card-header">
    Welcome to the Friends App
  </div>
  <div class="card-body">
    <%= link_to 'Sign In', new_user_session_path, class: "btn btn-secondary" %>
    <%= link_to 'Sign Up', new_user_registration_path, class: "btn btn-secondary" %>
  </div>
  <div class="card-footer text-muted">
    Check out the About Me page to learn more about me!
  </div>
</div>
</div>

<%end%>
